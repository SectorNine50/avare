<?xml version="1.0" encoding="utf-8"?>
<com.ds.avare.checklist.ChecklistItemLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:background="#000">

    <TextView
        android:id="@+id/itemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:textColor="#FFF"
        android:textSize="20dp"
        android:text="Item"/>

    <!-- Trick to create a nice little line across the screen. -->
    <FrameLayout
        android:id="@+id/vertLine"
        android:layout_toLeftOf="@+id/itemCheck"
        android:layout_centerVertical="true"
        android:layout_width="1dp"
        android:layout_height="40dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="#FFF"/>

    <ImageView
        android:id="@+id/itemCheck"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="15dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:tint="#FFF"
        android:src="@drawable/checkbox_blank_circle_outline"/>

</com.ds.avare.checklist.ChecklistItemLayout>